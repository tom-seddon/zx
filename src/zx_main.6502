;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

align 256
.code_end

space_left=$8000-code_end

PRINT "Space left:",space_left,~space_left

SAVE "ZX",code_begin,code_end,start
